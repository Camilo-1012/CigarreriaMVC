<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData ["Title"] - Sistema Cigarrería</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/CigarreriaMVC.styles.css" asp-append-version="true" /> *@

    <!-- CSS plugins -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container">
                <!-- Marca -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Sistema Cigarrería
                </a>

                <!-- Botón hamburguesa -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPrincipal" aria-controls="navbarPrincipal" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú -->
                <div class="collapse navbar-collapse" id="navbarPrincipal">
                    <ul class="navbar-nav me-auto">
                        <!-- Inicio -->
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                Inicio
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>

                        <!-- Inventario -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Inventario
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Producto" asp-action="Index">
                                    <i class="fa-solid fa-boxes-stacked"></i> Productos
                                </a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="MovimientosInventario" asp-action="Index">
                                    <i class="fa-solid fa-arrows-rotate"></i> Movimientos de inventario
                                </a>
                            </div>
                        </li>

                        @* Espacio para futuros módulos, por ejemplo Ventas/Reportes
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Reportes
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">
                                    Productos con bajo stock
                                </a>
                                <a class="dropdown-item" href="#">
                                    Resumen diario
                                </a>
                            </div>
                        </li>
                        *@
                    </ul>

                    <!-- Login / usuario (si sigues usando identidad) -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody ( )
        </main>
    </div>

    <footer class="bg-primary text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <!-- Enlaces rápidos -->
                <div class="col-md-4">
                    <h5 class="text-uppercase">Navegación</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">
                                Inicio
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Producto" asp-action="Index" class="text-light text-decoration-none">
                                Productos
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="MovimientosInventario" asp-action="Index" class="text-light text-decoration-none">
                                Movimientos de inventario
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Información de la cigarrería -->
                <div class="col-md-4">
                    <h5 class="text-uppercase">Cigarrería</h5>
                    <p class="mb-1">
                        <strong>Sistema de Inventario para Cigarrería</strong><br />
                        Control de productos, stock y movimientos.
                    </p>
                    <p class="mb-0">
                        Dirección: (edita aquí la dirección real)<br />
                        Teléfono: (edita aquí el teléfono)
                    </p>
                </div>

                <!-- Redes sociales / contacto -->
                <div class="col-md-4">
                    <h5 class="text-uppercase">Contacto</h5>
                    <p class="mb-1">
                        Email: <a href="mailto:info@cigarreria.com" class="text-light text-decoration-none">
                            info@cigarreria.com
                        </a>
                    </p>
                    <ul class="list-unstyled d-flex gap-3 mb-0">
                        <li>
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fab fa-whatsapp"></i> WhatsApp
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fab fa-facebook"></i> Facebook
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="border-light" />
            <div class="text-center">
                <p class="mb-0">
                    &copy; @DateTime.Now.Year - Sistema Cigarrería.
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">
                        Política de Privacidad
                    </a>
                </p>
            </div>
        </div>
    </footer>

    <!-- JS base -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS plugins -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

@*     @RenderSection ( "Scripts" , false )
 *@
</body>
</html>

