@{
    ViewData ["Title"] = "Movimientos de inventario";
    }

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Movimientos de inventario</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa-solid fa-plus"></i> Nuevo movimiento
            </a>
        </div>
    </div>

    <hr />

    <table id="tblMovimientos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Producto</th>
                <th>Tipo</th>
                <th>Cantidad</th>
                <th>Observación</th>
                <th>Acción</th>
            </tr>
        </thead>
    </table>
</div>

    @section Scripts {
    <script src="~/js/movimientosInventario.js"></script>
    }
