@model CigarreriaMVC.Models.Producto

@{
    ViewData ["Title"] = "Editar producto";
    }

<br />
<br />

<h3 class="text-center">Editar producto</h3>

<form method="post" asp-action="Edit">
    @* Id oculto para que el POST sepa qué producto actualizar *@
    <input type="hidden" asp-for="Id" />

    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <!-- Código de barra -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CodigoBarra"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CodigoBarra" class="form-control" placeholder="Ingresa el código de barra" />
                    <span asp-validation-for="CodigoBarra" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Nombre -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del producto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Categoría -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Categoria"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Categoria" class="form-control" placeholder="Ingresa la categoría" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Precio compra -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PrecioCompra"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PrecioCompra" class="form-control" placeholder="Precio de compra" />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Precio venta -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PrecioVenta"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PrecioVenta" class="form-control" placeholder="Precio de venta" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Stock actual -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="StockActual"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StockActual" class="form-control" placeholder="Cantidad actual en inventario" />
                    <span asp-validation-for="StockActual" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Stock mínimo -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="StockMinimo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StockMinimo" class="form-control" placeholder="Stock mínimo para alerta" />
                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!-- Activo -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo" class="form-check-input" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
            </div>

            <br />
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary form-control">
                Guardar cambios
            </button>
        </div>
        &nbsp;
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary form-control">
                Volver a la lista
            </a>
        </div>
    </div>
</form>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
